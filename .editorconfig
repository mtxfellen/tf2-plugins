# Set this file as the top-most EditorConfig file.
root = true

# All text files
[*]
 # UTF-8 character set
charset = utf-8
 # Use line feed newlines
end_of_line = lf
 # Use newline file terminator
insert_final_newline = true
 # Trim trailing whitespace
trim_trailing_whitespace = true
# 4-space soft tabulator indentation
indent_style = space
indent_size = 4

# Documentation files
[*.{md,txt}]
 # Natural language code for spell-checking
spelling_language = en-GB
